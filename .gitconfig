[user]
        email = jonathan.huot@thomsonreuters.com
        name = Jonathan Huot
[push]
        default = simple
[pull]
        rebase = true
[rebase]
        autoStash = true
[alias]
        b = branch
        c = checkout
        co = checkout
        ci = commit
        r = reset
        s = status
        st = status
        sh = show
        d = diff
        l = log
[credential]
	helper = osxkeychain
[merge]
	tool = p4mergetool
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$LOCAL $PWD/$REMOTE $PWD/$MERGED
	trustExitCode = false
