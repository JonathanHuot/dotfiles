# since bigsur
# sudoers: sudo visudo -f /private/etc/sudoers.d/yabai
# <user> ALL = (root) NOPASSWD: /usr/local/bin/yabai --load-sa

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# query window to add to ignore list
# yabai -m query --windows
# special modal apps
yabai -m rule --add app=Emacs manage=on
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
#yabai -m rule --add app="^Finder$" manage=off
#yabai -m rule --add app="^Preview$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app=DisplayLinkUserAgent manage=off

yabai -m rule --add app="^Microsoft Outlook$" title="Reminders?$" manage=off
yabai -m rule --add app="^Cisco AnyConnect Secure Mobility Client$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^Karabiner-EventViewer$" manage=off
yabai -m rule --add app="^VirtualBox VM$" manage=off


# toolbar:
yabai -m config top_padding 26
yabai -m config layout bsp
yabai -m config window_topmost on

# set focus follows mouse mode (default: off, options: off, autoraise, autofocus)
yabai -m config focus_follows_mouse autofocus
yabai -m config mouse_follows_focus off

yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

